package com.internousdev.ecsite.action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.Map;

import com.internousdev.ecsite.dao.ItemListDeleteDAO;
import com.internousdev.ecsite.dao.UserListDeleteDAO;
import com.internousdev.ecsite.dto.ItemListDTO;
import com.internousdev.ecsite.dto.UserListDTO;
import com.opensymphony.xwork2.ActionSupport;

public class UserListDeleteCompleteAction extends ActionSupport {

	public Map<String, Object> session;
	private UserListDeleteDAO DAO = new UserListDeleteDAO();

	private ArrayList<UserListDTO> userList = new ArrayList<UserListDTO>();
	private String deleteFlg;
	private String message;

	public String execute() throws SQLException {

		if (deleteFlg == null) {

			userList = DAO.iteminfo();
		} else if (deleteFlg.equals("1")) {
			delete();
		}

		String result = SUCCESS;
		return result;
	}

	public void delete() throws SQLException {

		int res = DAO.ItemDelete();

		if (res > 0) {
			userList = null;
			setMessage("商品情報を正しく削除しました。");
		} else if (res == 0) {
			setMessage("商品情報の削除に失敗しました。");
		}
	}
}