package com.internousdev.ecsite.action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.ecsite.dao.UserListDeleteDAO;
import com.internousdev.ecsite.dto.UserListDTO;
import com.opensymphony.xwork2.ActionSupport;

public class UserListDeleteCompleteAction extends ActionSupport implements SessionAware {
	private String Flg;
	private String message;
	private UserListDeleteDAO DAO = new UserListDeleteDAO();
	private ArrayList<UserListDTO> createUser = new ArrayList<UserListDTO>();
	public Map<String, Object> session;

	public String execute() throws SQLException {
		if (!session.containsKey("id")) {
			return ERROR;

		}
		if (Flg.equals("1")) {
			delete();
		}

		String result = SUCCESS;
		return result;
	}

	public void delete() throws SQLException {

		String insert_date = session.get("insert_date").toString();
		int res = DAO.delete(insert_date);

		if (res > 0) {
			createUser = null;
			setMessage("商品情報を正しく削除しました。");
		} else if (res == 0) {
			setMessage("商品情報の削除に失敗しました。");
		}
	}

	public String getFlg() {
		return Flg;
	}

	public void setFlg(String flg) {
		Flg = flg;
	}

	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	public ArrayList<UserListDTO> getCreateUser() {
		return createUser;
	}

	public void setCreateUser(ArrayList<UserListDTO> createUser) {
		this.createUser = createUser;
	}

	public Map<String, Object> getSession() {
		return session;
	}

	public void setSession(Map<String, Object> session) {
		this.session = session;
	}

}
