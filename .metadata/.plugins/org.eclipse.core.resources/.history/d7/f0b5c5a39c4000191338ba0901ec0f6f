package com.internousdev.ecsite.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.internousdev.ecsite.dto.UserListDTO;
import com.internousdev.ecsite.util.DBConnector;

public class UserListDeleteDAO {
	List<UserListDTO> userCreate = new ArrayList<UserListDTO>();

	public int delete(String insert_date) throws SQLException {

		DBConnector db = new DBConnector();
		Connection con = db.getConnection();

		// insert_date=nullを除いてすべてのユーザー情報を一括削除する
		String sql = "DELETE FROM login_user_transaction WHERE insert_date =? NOT IN ('null')";

		int ret = 0;
		try {
			PreparedStatement ps = con.prepareStatement(sql);
			ps.setString(1, insert_date);

			ret = ps.executeUpdate();
		} catch (SQLException e) {
			e.printStackTrace();

		} finally {
			con.close();
		}
		return ret;

	}

}
